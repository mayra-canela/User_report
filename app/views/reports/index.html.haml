%h1 Displaying employees
#user_nav
  - if user_signed_in?
    Signed in as #{current_user.email}. Not you?
    #{link_to "Sign out", destroy_user_session_path, :method => :delete}
  - else
    = link_to "Sign up", new_user_registration_path
    or #{link_to "sign in", new_user_session_path}

%td= link_to_function "test js", '$(this).html("js works")'

%table.table.table-hover
  %thead
    %tr
      %th ID
      %th Fullname
      %th Account number
      %th Rate
      %th Hours week
      %th hours worked
      %th Salary
      %th 
  %tbody
  - @employees.each do |e|
    %tr
      %td= e.id
      %td= "#{e.firstname} #{e.lastname}"
      %td= e.account_number
      %td= e.rate
      %td= e.hours_week
      %td= e.worked_hours
      %td= e.salary
      %td= link_to "Show", employee_path(e.id)
      %td= link_to "Edit", edit_employee_path(e.id)
      %td= link_to "Delete", employee_path(e.id), method: :delete, :data => { :confirm => 'Are you sure?' }

  %tr
    %td
    %td
    %td
    %td
    %td
    %td Total
    %td= @total_amount
    %td
    %td


= link_to "New employee", new_employee_path
|
= link_to "Export to CSV", reports_path(format: :csv)
